<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alfonsopb.puretask.TaskDetailsController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Task Details" style="-fx-font-size: 20px;" />
    <Label text="Title:" />
    <TextField fx:id="titleTextField" />
    <Label text="Description:" />
    <TextArea fx:id="descriptionTextArea" />
    <Button text="Complete Task" onAction="#handleCompleteTask"/>
</VBox>
